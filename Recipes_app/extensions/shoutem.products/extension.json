{
  "name": "products",
  "version": "1.2.0",
  "platform": "1.2.*",
  "title": "Products",
  "description": "Show products with purchase link",
  "categories": ["commerce"],
  "repository": {
    "type": "git",
    "url": "https://github.com/shoutem/extensions"
  },
  "icon": "server/assets/add-products-image.png",
  "dependencies": [
    "shoutem.cms"
  ],
  "shortcuts": [
    {
      "name": "openProductsList",
      "title": "Products",
      "screen": "@.ProductsList",
      "icon": "theme://cart.png",
      "adminPages": [
        {
          "page": "shoutem.cms.CmsPage",
          "title": "Content",
          "parameters": {
            "schema":"@.Products"
          }
        }
      ]
    }
  ],
  "screens": [
    {
    "name": "ProductsList"
    },
    {
    "name": "ProductDetails"
    }
  ],
  "dataSchemas": [
    {
      "name": "Products",
      "path": "./server/data-schemas/Products.json"
    }
  ]
}
