{
  "name": "articles",
  "title": "News Articles",
  "titleProperty": "title",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "format": "single-line",
      "title": "Title",
      "minLength": 2,
      "maxLength": 200,
      "required": true,
      "displayPriority": 1
    },
    "body": {
      "type": "string",
      "format": "html",
      "title": "Body",
      "displayPriority": 3
    },
    "newsAuthor": {
      "type": "string",
      "format": "single-line",
      "title": "Author",
      "displayPriority": 4
    },
    "image": {
      "type": "object",
      "format": "attachment",
      "title": "Image",
      "referencedSchema": "shoutem.core.image-attachments",
      "displayPriority": 5
    },
    "link": {
      "type": "string",
      "format": "uri",
      "title": "Article URL",
      "pattern": "^(https?|bundle|shoutem|tel|sms|mail|itms)://[-A-Za-z0-9+&@#/%?=~_|!:,.;]*[-A-Za-z0-9+&@#/%=~_|]$",
      "displayPriority": 6
    }
  }
}
