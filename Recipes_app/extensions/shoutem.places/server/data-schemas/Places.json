{
  "name": "places",
  "title":"Places",
  "properties": {
    "name": {
      "format": "single-line",
      "title": "Place name",
      "type": "string",
      "required":true,
      "displayPriority": 1
    },
    "description": {
      "format": "html",
      "title": "Description",
      "type": "string",
      "displayPriority": 4
    },
    "url": {
      "format": "uri",
      "title": "Website",
      "type": "string",
      "pattern": "^(https?|bundle|shoutem|tel|sms|mail|itms)://[-A-Za-z0-9+&@#/%?=~_|!:,.;]*[-A-Za-z0-9+&@#/%=~_|]$",
      "displayPriority": 5
    },
    "image": {
      "format": "attachment",
      "title": "Image",
      "type": "object",
      "referencedSchema": "shoutem.core.image-attachments",
      "displayPriority": 6
    },
    "mail": {
      "format": "single-line",
      "title": "E-mail",
      "type": "string",
      "displayPriority": 7
    },
    "openingHours": {
      "format": "multi-line",
      "title": "Open Hours",
      "type": "string",
      "displayPriority": 8
    },
    "phone": {
      "format": "single-line",
      "title": "Phone",
      "type": "string",
      "displayPriority": 9
    },
    "rsvpLink": {
      "format": "uri",
      "title": "RSVP link",
      "type": "string",
      "displayPriority": 3
    },
    "location": {
      "format": "geolocation",
      "title": "Location",
      "type": "object",
      "displayPriority": 2
    }
  },
  "titleProperty": "name",
  "type": "object"
}
